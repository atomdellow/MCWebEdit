{
  "name": "mc-web-edit",
  "version": "1.0.0",
  "description": "Collaborative browser-based voxel editor for Minecraft Java with World-Edit schematic support",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:server && npm run install:client",
    "install:server": "cd server && npm install",
    "install:client": "cd client && npm install",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:client",
    "build:client": "cd client && npm run build",
    "start": "cd server && npm start",
    "test": "npm run test:server && npm run test:client",
    "test:server": "cd server && npm test",
    "test:client": "cd client && npm test",
    "textures:download": "node scripts/downloadTextures.js",
    "textures:download:force": "node scripts/downloadTextures.js --force",
    "textures:scrape": "node scripts/scrapeWikiTextures.js",
    "textures:scrape:force": "node scripts/scrapeWikiTextures.js --force",
    "textures:smart": "node scripts/smartTextureDownloader.js",
    "textures:smart:force": "node scripts/smartTextureDownloader.js --force"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "puppeteer": "^24.11.2"
  },
  "keywords": [
    "minecraft",
    "voxel",
    "editor",
    "worldedit",
    "collaborative",
    "three.js",
    "vue",
    "socket.io"
  ],
  "author": "",
  "license": "MIT"
}
